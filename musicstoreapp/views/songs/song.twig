{% extends "layout.twig" %}

{% block title %} Detalles de canción {% endblock %}

{% block main_container %}
	 <div class="row">
		<div class="media col-xs-10">
		  <div class="media-left media-middle">
			<img class="media-object" src="/covers/{{ song._id }}.png" >
		  </div>
		  <div class="media-body">
			 <h2>{{ song.title }}</h2>
			 <p>{{ song.author }}</p>
			 <p>{{ song.kind }}</p>
			  <a class="btn btn-primary pull-right"
				 href="/songs/buy/{{ song._id }}">{{ song.price }} €</a>
		  </div>
		</div>
	  </div>
	  
	 <!-- Comentarios -->-
		 {% for comment in comments %}
		<div class="row">
			<div class="media col-xs-10">
				 <div class="media-left media-middle">
					 <a href="/songs/{{comment._id}}">
						 <img class="media-object" src="../../public/images/user.png" >
					 </a>
				 </div>
				<div class="media-body">
					 <h4 class="media-heading">{{ comment.author }}</h4>
					 {{ comment.text }}
				 </div>
			 </div>
			<div>
				<td>
					<a href="/comments/delete/{{ comment._id }}">Eliminar</a> <br>
				</td>
			</div>
		</div>
		 {% endfor %}

	<!-- Formulario para comentarios -->
	<form class="form-horizontal" method="post" action="/comments/{{ song._id }}" enctype="multipart/form-data">
		<div class="form-group">
			<label class="control-label col-sm-2" for="text">Comentario:</label>
			<div class="col-sm-10">
				<input id="text" type="text" class="form-control" name="text"
					   placeholder="Escriba su comentario" required="true" />
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Agregar</button>
			</div>
		</div>
	</form>
{% endblock %}
